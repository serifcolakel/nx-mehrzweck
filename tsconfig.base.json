{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mehrzweck/ui": ["packages/ui/src/index.ts"],
      "about/Module": ["apps/about/src/remote-entry.ts"],
      "blog/Module": ["apps/blog/src/remote-entry.ts"],
      "store/Module": ["apps/store/src/remote-entry.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
